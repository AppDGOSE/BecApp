<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/header_title_event"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/icon_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="7dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/title_event_fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_event"
            android:text="Encuentro en MÃ©xcio 2010 Construyendo Futuros"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="5dp"
            />
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_below="@id/header_title_event"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/header_dates_event"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:paddingTop="7dp">

        <RelativeLayout
             android:id="@+id/header_start_date_event"
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/start_date_fill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2010-10-19 18:00:00"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date_event"
                    android:layout_below="@id/start_date_fill"
                    android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_end_date_event"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/end_date_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2010-10-22 00:00:00"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date_event"
                android:layout_below="@id/end_date_fill"
                android:textColor="@android:color/darker_gray"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header_place_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_dates_event"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/place_event_fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Centro Cultural Universitario Tlatelolco de la UNAM"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_event"
            android:layout_below="@id/place_event_fill"
            android:textColor="@android:color/darker_gray"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_place_event">

        <Button
            android:id="@+id/url_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/button_link"
            android:background="#E9EAED"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            />

    </RelativeLayout>

</RelativeLayout>