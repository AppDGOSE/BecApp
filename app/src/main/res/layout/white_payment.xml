<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background"
    android:padding="10dp">

    <View android:id="@+id/strut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/left_column"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/strut"
        android:layout_alignParentLeft="true">

       <TextView
            android:id="@+id/text_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Enero"
            android:textAppearance="?android:attr/textAppearanceMedium">
       </TextView>

        <TextView
            android:id="@+id/text_moth_descriptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/payments_month"
            android:layout_below="@id/text_month"
            android:textColor="@android:color/darker_gray">
        </TextView>

        <TextView
            android:id="@+id/text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="$750.00"
            android:layout_below="@id/text_moth_descriptor"
            android:paddingTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/payments_amount"
            android:layout_below="@id/text_amount"
            android:textColor="@android:color/darker_gray">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_column"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/strut">

        <TextView
            android:id="@+id/text_payment_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2 de febrero"
            android:textAppearance="?android:attr/textAppearanceMedium">
        </TextView>

        <TextView
            android:id="@+id/text_date_descriptor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/payments_date"
            android:layout_below="@id/text_payment_day"
            android:textColor="@android:color/darker_gray">
        </TextView>

        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Realizado"
            android:layout_below="@id/text_date_descriptor"
            android:paddingTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/payments_status"
            android:layout_below="@id/text_status"
            android:textColor="@android:color/darker_gray">
        </TextView>

    </RelativeLayout>
</RelativeLayout>
